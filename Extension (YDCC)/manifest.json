{
  "manifest_version": 2,
  "name": "Oracle Safety Checker",
  "version": "1.0",
  "description": "Check the safety of websites",
  "permissions": [
    "activeTab",
    "https://safebrowsing.googleapis.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["oracle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "oracle.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
